package com.sendinfo.facestandard.linetake.module.adapter;

import android.widget.ImageView;

import com.bumptech.glide.Glide;
import com.bumptech.glide.load.engine.DiskCacheStrategy;
import com.chad.library.adapter.base.BaseQuickAdapter;
import com.chad.library.adapter.base.BaseViewHolder;
import com.sendinfo.facestandard.linetake.R;
import com.sendinfo.facestandard.linetake.bean.PTTicketInfoVo;
import com.sendinfo.facestandard.linetake.bean.VisitorBean;
import com.sendinfo.facestandard.linetake.util.string.StringUtils;

import java.util.List;

public class VisitorAdapter extends BaseQuickAdapter<PTTicketInfoVo.FACELISTBean, BaseViewHolder> {

    public VisitorAdapter(int layoutResId, List<PTTicketInfoVo.FACELISTBean> list) {
        super(layoutResId, list);
    }

    @Override
    protected void convert(BaseViewHolder helper, PTTicketInfoVo.FACELISTBean item) {
        helper.addOnClickListener(R.id.iv_visitor_head);
        if (StringUtils.isEmpty(item.getPICURL())) {
            ImageView imageView = helper.getView(R.id.iv_visitor_head);
            imageView.setScaleType(ImageView.ScaleType.CENTER);
            Glide.with(mContext).load(R.drawable.image_add_sel).into(imageView);
        } else {
            ImageView imageView = helper.getView(R.id.iv_visitor_head);
            imageView.setScaleType(ImageView.ScaleType.FIT_XY);
            Glide.with(mContext).load(item.getPICURL()).into(imageView);
        }
    }
}
