<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">
    <com.sendinfo.facestandard.linetake.widget.MyTopNavBar
        android:id="@+id/top_bar"
        app:backgroundColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.sendinfo.facestandard.linetake.widget.MyTopNavBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_text"
                android:padding="@dimen/activity_margin"
                android:text="通用数据设置"
                android:textColor="@color/white"
                android:textSize="@dimen/text_title2" />

            <TextView
                android:id="@+id/park_config_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_text"
                android:padding="@dimen/activity_margin"
                android:text="景点配置"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/text_title2" />

            <TextView
                android:id="@+id/order_list_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_text"
                android:padding="@dimen/activity_margin"
                android:text="订单列表"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/text_title2" />

            <TextView
                android:id="@+id/log_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_text"
                android:padding="@dimen/activity_margin"
                android:text="查看日志"
                android:textColor="@color/white"
                android:textSize="@dimen/text_title2" />

        </LinearLayout>

        <include layout="@layout/include_vline" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/margin_big">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="服务器地址："
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_title2" />

                    <EditText
                        android:id="@+id/mEtIp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:background="@drawable/bg_transparent_s"
                        android:hint="请输入服务器地址"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/activity_margin"
                        android:paddingTop="8dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/line"
                        android:textSize="@dimen/text_title2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="端口号："
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_title2" />

                    <EditText
                        android:id="@+id/mEtPort2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:background="@drawable/bg_transparent_s"
                        android:digits="0123456789"
                        android:hint="请输入端口号"
                        android:inputType="number"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/activity_margin"
                        android:paddingTop="8dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/line"
                        android:textSize="@dimen/text_title2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="人脸服务地址："
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_title2" />

                    <EditText
                        android:id="@+id/mEtIp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:background="@drawable/bg_transparent_s"
                        android:hint="请输入人脸服务地址"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/activity_margin"
                        android:paddingTop="8dp"
                        android:text="sendinfo.aibee.cn"
                        android:textColor="@color/white"
                        android:textColorHint="@color/line"
                        android:textSize="@dimen/text_title2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="人脸端口号："
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_title2" />

                    <EditText
                        android:id="@+id/mEtPort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:background="@drawable/bg_transparent_s"
                        android:digits="0123456789"
                        android:hint="请输入人脸端口号"
                        android:inputType="number"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/activity_margin"
                        android:paddingTop="8dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/line"
                        android:textSize="@dimen/text_title2" />

                </LinearLayout>

                <!-- groupid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="GroupID："
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_title2" />

                    <EditText
                        android:id="@+id/mEtGroupId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:background="@drawable/bg_transparent_s"
                        android:digits="0123456789"
                        android:hint="请输入groupid"
                        android:inputType="number"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/activity_margin"
                        android:paddingTop="8dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/line"
                        android:textSize="@dimen/text_title2" />

                </LinearLayout>

                <!-- 通道号 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="通道号："
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_title2" />

                    <EditText
                        android:id="@+id/mEtGateNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:background="@drawable/bg_transparent_s"
                        android:digits="0123456789"
                        android:hint="请输入通道号"
                        android:inputType="number"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/activity_margin"
                        android:paddingTop="8dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textColorHint="@color/line"
                        android:textSize="@dimen/text_title2" />

                </LinearLayout>

                <!-- 通道IP -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="通道IP："
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_title2" />

                    <EditText
                        android:id="@+id/mEtGateIP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:background="@drawable/bg_transparent_s"
                        android:hint="请输入通道ip"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/activity_margin"
                        android:paddingTop="8dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textColorHint="@color/line"
                        android:textSize="@dimen/text_title2" />

                </LinearLayout>


                <TextView
                    android:id="@+id/mTvSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_big"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/margin_big"
                    android:paddingRight="@dimen/margin_big"
                    android:paddingTop="10dp"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_title2" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>




</LinearLayout>
