public class TicketAdapter extends BaseQuickAdapter<PTTicketInfoVo,BaseViewHolder>{

    public TicketAdapter(int layoutResId) {
        super(layoutResId);
    }
    public void reloadData(List<PTTicketInfoVo>ticketMS){

        setNewData(ticketMS);
        notifyDataSetChanged();
    }

    @Override
    protected void convert(BaseViewHolder helper, PTTicketInfoVo item) {

        helper.setText(R.id.bar_code_tv,"条形码:"+item.getBARCODE());
        helper.setText(R.id.amount_tv,"总票数:"+item.getTICKETCOUNT());
        helper.setText(R.id.face_tv,"已录人脸:"+item.getBINDCOUNT());
        helper.setText(R.id.can_face_tv,"可录人脸:"+item.getCANBINDCOUNT());
        helper.setText(R.id.status_tv,"状态:"+item.getSTATUS());
        helper.setText(R.id.valid_tv,"使用时间:"+item.getUSETIME());

    }
}
