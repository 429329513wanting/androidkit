<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">
    <com.guo.android_extend.widget.CameraSurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/person_face_imgv"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="160dp"
        android:layout_height="160dp" />

    <ImageView
        android:id="@+id/switch_img"
        android:layout_width="50dp"
        android:padding="15dp"
        android:layout_height="50dp"
        android:src="@drawable/switch0"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/flash_img"
        android:layout_width="50dp"
        android:padding="15dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/switch_img"
        android:layout_marginRight="35dp"
        android:src="@drawable/flash"
        android:visibility="gone"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/start_picture_tv"
        android:text="开始采集"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical|center"
        android:layout_centerHorizontal="true"
        android:background="@color/main_orange_color"
        android:layout_width="wrap_content"
        android:layout_height="35dp" />

    <TextView
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:text="温馨提示:请勿重复点击采集按钮,将人脸对准摄像头会自动进行拍照"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="wrap_content" />


</RelativeLayout>