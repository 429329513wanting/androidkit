<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sendinfo.facestandard.linetake.widget.MyTopNavBar
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:backgroundColor="@color/toolbar_color"
            app:is_show_back="true"
            app:nav_title="详情页" />


        <Button
            android:id="@+id/del_btn"
            android:textColor="@color/white"
            android:text="删除"
            android:visibility="gone"
            android:textSize="18sp"
            android:background="@color/transparent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="85dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/check_btn"
            android:textColor="@color/white"
            android:text="检票"
            android:textSize="18sp"
            android:visibility="gone"
            android:background="@color/transparent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>


    <LinearLayout
        android:layout_margin="@dimen/dp_10"
        android:padding="10dp"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ticket_model_name_tv"
            android:textSize="18sp"
            android:hint="票型名称:测试票"
            android:visibility="gone"
            android:textColor="@color/text_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name_tv"
            android:textSize="14sp"
            android:hint="名称:测试票"
            android:visibility="gone"
            android:textColor="@color/text_black2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bar_code_tv"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="5dp"
            android:hint="条形码:11111111111111111"
            android:textColor="@color/text_black2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/amount_tv"
                android:textSize="@dimen/sp_14"
                android:hint="总票数:111"
                android:textColor="@color/text_black2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/face_tv"
                android:textSize="@dimen/sp_14"
                android:hint="已录人脸:111"
                android:layout_marginLeft="20dp"
                android:textColor="@color/text_black2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/can_face_tv"
                android:textSize="@dimen/sp_14"
                android:hint="可录人脸:0"
                android:layout_marginLeft="20dp"
                android:textColor="@color/text_black2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/status_tv"
                android:textSize="@dimen/sp_14"
                android:hint="状态:已检"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/phone_tv"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="5dp"
                android:hint="手机号:111"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:textColor="@color/text_black2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:id="@+id/valid_tv"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="5dp"
            android:hint="有效期:11111111111111111"
            android:textColor="@color/text_black2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />





    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_margin="@dimen/dp_10"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
