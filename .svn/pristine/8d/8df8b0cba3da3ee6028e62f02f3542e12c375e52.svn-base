<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sendinfo.facestandard.linetake.widget.MyTopNavBar
            android:id="@+id/top_bar"
            app:is_show_back="false"
            app:backgroundColor="@color/main_blue_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.sendinfo.facestandard.linetake.widget.MyTopNavBar>


        <ImageView
            android:id="@+id/setting_icon"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/setting"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <com.cretin.www.clearedittext.view.ClearEditText
            android:id="@+id/search_et"
            android:background="@drawable/search_bg"
            android:hint="请输入票型编码或扫码查询"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_marginRight="165dp"
            android:layout_height="45dp" />

        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="溪口风景区票型查询"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_marginRight="95dp"
            android:visibility="gone"
            android:layout_height="45dp" />


        <TextView
            android:id="@+id/mTvSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="65dp"
            android:text="搜索"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mTvYearCard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="60dp"
            android:text="年卡"
            android:visibility="gone"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </FrameLayout>

    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/pull_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/receive_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:overScrollMode="never">

        </android.support.v7.widget.RecyclerView>

    </com.baoyz.widget.PullRefreshLayout>


</LinearLayout>