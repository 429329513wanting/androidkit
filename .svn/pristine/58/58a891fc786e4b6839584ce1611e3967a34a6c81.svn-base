<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="@dimen/dp_10"
    android:background="#eee"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photo"
        android:layout_gravity="center_vertical"
        android:layout_width="95dp"
        android:layout_height="95dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ticket_model_name_tv"
            android:textSize="18sp"
            android:hint="票型名称:测试票"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_black"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name_tv"
            android:textSize="14sp"
            android:hint="名称:测试票"
            android:visibility="gone"
            android:textColor="@color/text_black2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bar_code_tv"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="5dp"
            android:hint="条形码:11111111111111111"
            android:textColor="@color/text_black2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/certno_tv"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="5dp"
            android:hint="身份证:11111111111111111"
            android:textColor="@color/text_black2"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/create_time_tv"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="5dp"
            android:hint="创建时间:11111111111111111"
            android:textColor="@color/text_black2"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/status_tv"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:text="状态:未提交人脸"
            android:textColor="@color/red_btn_bg_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/recommit_tv"
            android:textSize="16sp"
            android:background="@color/bg_orange_n"
            android:layout_marginTop="20dp"
            android:text="重新提交"
            android:layout_gravity="center"
            android:padding="3dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />

    </LinearLayout>


</LinearLayout>
