<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.YearCardSearchActivity">

    <com.sendinfo.facestandard.linetake.widget.MyTopNavBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        app:nav_title="年卡查询"
        android:layout_height="wrap_content">

    </com.sendinfo.facestandard.linetake.widget.MyTopNavBar>

    <View
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <info.hoang8f.android.segmented.SegmentedGroup
        xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
        android:id="@+id/segmented"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        segmentedgroup:sc_tint_color="@color/main_green_stroke_color"
        segmentedgroup:sc_border_width="2dp"
        segmentedgroup:sc_corner_radius="10dp">

        <RadioButton
            android:id="@+id/seg_year_btn"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:textSize="@dimen/sp_16"
            android:text="年卡"
            android:checked="true"
            style="@style/RadioButton" />

        <RadioButton
            android:id="@+id/seg_hotel_btn"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:text="酒店年卡"
            android:textSize="@dimen/sp_16"
            style="@style/RadioButton" />
    </info.hoang8f.android.segmented.SegmentedGroup>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/main_green_stroke_color"
        app:cardPreventCornerOverlap="false"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:layout_margin="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#fff"
                    android:text="手机号:"/>
                <com.cretin.www.clearedittext.view.ClearEditText
                    android:id="@+id/phone_et"
                    android:hint="请输入手机号"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:background="@null"
                    android:maxLines="1"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/white"
                    android:layout_height="65dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/number_tv"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#fff"
                    android:text="卡号:"/>
                <com.cretin.www.clearedittext.view.ClearEditText
                    android:id="@+id/year_card_num_et"
                    android:hint="请输入卡号"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:background="@null"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/idcard_ll"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#fff"
                    android:text="身份证号:"/>
                <com.cretin.www.clearedittext.view.ClearEditText
                    android:id="@+id/idcard_et"
                    android:hint="请输入身份证号"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:background="@null"
                    android:maxLines="1"
                    android:layout_marginLeft="20dp"
                    android:textColorHint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="55dp"
        android:textColor="@color/red_btn_bg_color"
        android:text="温馨提示:请输入某一项条件进行查询"/>

    <Button

        android:id="@+id/sure_btn"
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:background="@drawable/login_btn_bg"
        android:textSize="@dimen/sp_16"
        android:text="查询"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

</LinearLayout>