<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:contentPadding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/main_green_stroke_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:text="名称:xx"/>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:text="姓名:测试"/>


            <TextView
                android:id="@+id/card_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:text="卡号:150000000000"/>



            <TextView
                android:id="@+id/start_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:text="开卡日期:2018-01-01"/>

            <TextView
                android:id="@+id/end_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:text="结束日期:2018-01-01"/>

        </LinearLayout>

        <TextView
            android:id="@+id/card_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="25dp"
            android:text="年卡"/>

    </android.support.v7.widget.CardView>

</LinearLayout>
