<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.MainActivity">

    <FrameLayout

        android:id="@+id/container"
        android:layout_above="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:background="#e8e8e8"
        android:layout_above="@+id/bottom_rg"
        android:layout_height="1dp"/>

    <RadioGroup
        android:id="@+id/bottom_rg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_alignParentBottom="true">

        <RadioButton
        android:id="@+id/home_rg"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:button="@null"
        android:text="首页"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_5"
        android:drawablePadding="@dimen/dp_5"
        android:drawableTop="@drawable/home_selector"
        android:textColor="@drawable/radio_btn_text_selector"
        android:gravity="center"
        android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/order_rg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="订单"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@drawable/home_selector"
            android:textColor="@drawable/radio_btn_text_selector"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/me_rg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="个人中心"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_5"
            android:textColor="@drawable/radio_btn_text_selector"
            android:drawableTop="@drawable/home_selector"
            android:layout_height="wrap_content" />

    </RadioGroup>

</RelativeLayout>