<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- navBar 自定义属性 -->
    <declare-styleable name="MyNavBar">

        <attr name="is_show_back" format="boolean"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="nav_title" format="string"/>
        <attr name="right_icon" format="reference"/>

    </declare-styleable>

    <style name="CustomDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>

        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/float_transparent</item>

        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>

        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>

        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>

        <!-- 背景模糊 -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- 允许对话框的背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>

        <!-- 字体颜色 -->
        <item name="android:textColor">@color/text_color</item>
        <item name="android:editTextColor">@color/text_color</item>
    </style>

    <style name="empty_img">
        <item name="android:layout_width">@dimen/def_height</item>
        <item name="android:layout_height">@dimen/def_height</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
